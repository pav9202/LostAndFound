<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3CB1DC"
    android:id="@+id/outer_relative_layout"
    tools:context=".MainActivity" >
	    
	    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="#3CB1DC"
	    tools:context=".MainActivity" 
	    android:id="@+id/outer_linear_layout"
	    android:textStyle="@style/CodeFont" >

        <Button
            android:id="@+id/adding"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:background="@drawable/roundbutton"
            android:gravity="center_horizontal"
            android:text="Add Item"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/filter"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:background="@drawable/roundbutton"
            android:gravity="center_horizontal"
            android:text="Filter"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/logout"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:background="@drawable/roundbutton"
            android:gravity="center_horizontal"
            android:text="Logout"
            android:textColor="@color/white" />"
        
    </LinearLayout>
	
	<ImageView
	    android:id="@+id/logo"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/outer_linear_layout"
	    android:contentDescription="@string/logo_desc"
	    android:src="@drawable/lostafoundlogo" />
	
</RelativeLayout>

